<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="GameDevSimulator.Views.SettingsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:GameDevSimulator.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource LayerFillColorDefaultBrush}">

    <Grid>
        
        <Grid Margin="100,100,0,0">
            <TextBlock FontSize="18" Text="Auto-Save" Margin="0,0,0,0"/>
            <TextBlock FontSize="12" Text="Automatically saves game progress" Margin="0,50,0,0"/>
            <ToggleButton Height="50" Width="100" Margin="0,70,0,0"> kurwo dzialaj </ToggleButton>
        </Grid>

        <Grid Margin="100,300,0,0">
            <TextBlock FontSize="18" Text="Reset Save Data" Margin="0,0,0,0"/>
            <TextBlock FontSize="12" Text="Resets all progress saved" Margin="0,50,0,0"/>
            <ToggleButton Margin="0,70,0,0" />
        </Grid>
        
    </Grid>
</Page>
